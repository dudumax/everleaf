<h1> Our Blog</h1>

<% @users.each do |user| %>
    <h2><%= user.name %></h2>
    <p><%= user.email %></p>
    <p> <%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Show', user %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
    <hr />
  <% end %>
  
  
  

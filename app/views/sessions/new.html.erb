
<h1>Log in</h1>

<div class="row">
  <div class="span6 offset3">
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in",  class: "btn btn-large btn-primary" %>
<% end %>

 <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>